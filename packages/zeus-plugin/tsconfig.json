{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "WebWorker"],
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./types",
  },
  "include": ["src/**/*.ts"]
}
